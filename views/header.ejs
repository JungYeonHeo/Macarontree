
<!-- HEADER -->
<div id="headers">
    
    <!-- Top 영역 -->
    <div id="header-top">
        <div class="sns">
            <img src="/public/images/icon_facebook.png" alt="">
            <img src="/public/images/icon_instagram.png" alt="">
            <img src="/public/images/icon_youtube.png" alt="">
        </div>
        
        <div class="center"></div>
        
        <div class="users">
            <% if (!isLogin) { %>
                <a href="/login">로그인</a>
                <a href="/signup_agree">회원가입</a>
            <% } else { %>
                <a href="/login_check/logout">로그아웃</a>
                <a href="/order_list">마이페이지</a>
            <% } %>
        </div>
    </div>
    <!-- //Top 영역 -->
    
    <!-- MEMU -->
    <div id="header-body">
       <div id="header-contents">
            <div class="logo">
                <img src="/public/images/logo.png" alt="">
