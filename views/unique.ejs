                            <button id="btn_option" type="button" value="옵션선택" class="submit">옵션선택완료</button>
                        </form>
                    </div>
                </div>
                <!-- //커스텀 마카롱 주문 선택 사항 -->

                <!-- 옵션 확인  -->
                <div class="option">
                <div class="option-contents">
                    <div class="title"># 주문 내역서</div>
                    <div class="option-item">
                    <div class="option-list">
                        <div id="option" class="no-option">- 선택된 옵션 없음-</div>
                    </div>
                    </div>
                    <div class="price-text">총 옵션 금액 <span id="sum_price" class="price-amount">0원</span></div>

                    <input type="submit" id="btn_order" value="주문하기" class="order">
                </div>
            </div>
            </div>
        </div>
        <!-- //CONTENTS -->

        <!-- Footer -->
        <%- include ('../views/footer') %>
        <!-- //Footer -->
    </div>
</body>

<script>
// 입력 받은 데이터를 json 형태로 변수에 저장
var data = new Array(); 
var price = new Array(0); 
var cnt = 0;
var count = 0; // 실제 옵션 개수 
var optionCount = new Array(1);
var inputData = new Array();
var sendData = new Object();
var jsonData = new Object();
var arrayData = new Array();
var obj;
var sumPrice = 0;

// 꼬끄 모양 택 1
$("#shape_circle").click(function () {
    $("#shape_etc").prop("checked", false);
    $(".coque-character").prop("disabled", true);
});

$("#shape_etc").click(function () {
    $("#shape_circle").prop("checked", false);
    $(".coque-character").prop("disabled", false);
});

// 옵션 추가하기 
$("#btn_option").click(function(){
    inputData = $("form").serializeArray();
    obj = new Object();

    for (var i = 0; i < inputData.length; i++) {
        var param_name = inputData[i].name;
        var param_value = inputData[i].value;

        // 가격 책정
        if ( i == 0 ) {
            if (param_value == '원') {
                price[cnt] = 2000;
            } else {
                price[cnt] = 3000;
            }

            // 데이터 정렬
            data[cnt] = param_name + ": " + param_value;
        } else {
            data[cnt] = data[cnt] + ",  "+ param_name + ": " + param_value; 
        }
    }

    optionCount[cnt] = 1;

    option_reload() // 옵션 리로드

    // 선택한 옵션 초기화
    $("form").each(function() {  
        this.reset();  
    });  

    cnt = cnt + 1; // index
    count = count + 1; // 개수 

    // 총 가격 설정
    cal_sumPrice()
});

// 옵션 삭제하기 (X 버튼)
$(document).on("click", ".option_delete", function(){ 
    var num = $(".option_delete").index(this); 
    data[num] = null;
    price[num] = null;
    optionCount[num] = null;
    option_reload()
    cal_sumPrice()
    count = count - 1;
    if (count == 0) { 
        $("#option").text("- 선택된 옵션 없음 -");
        $("#option").css("padding-top", "50px");
    }
});

// 옵션 개수 변경
$(document).on("click", ".option_minus", function(){ 
    var num = $(".option_minus").index(this);
    // alert(num); // 옵션을 삭제하면 번호가 줄어들어서 에러남 
    var count = optionCount[num] - 1;
    $(".option_count").eq(num).val(count);
    optionCount[num] = count;
    $(".option_price").eq(num).text(price[num] * optionCount[num]) + "원";
    cal_sumPrice()
    if (count == 1) {
        $(".option_minus").eq(num).prop("disabled", true);
        // $(".option_minus").eq(num).css("background", "#e8e8e8");
    }
});     

$(document).on("click", ".option_plus", function(){ 
    var num = $(".option_plus").index(this); 
    var count = optionCount[num] + 1;
    $(".option_count").eq(num).val(count); 
    optionCount[num] = count;
    $(".option_price").eq(num).text(price[num] * optionCount[num] + "원"); 
    cal_sumPrice()
    $(".option_minus").eq(num).prop("disabled", false); 
});

// 주문하기 
$("#btn_order").click(function () {
    if (cnt == 0 ) {
        alert("옵션을 선택해주세요");
    } else {
       // 한 번에 여러번 클릭으로 값이 이중으로 들어가는 것 방지
        $("#btn_order").prop("disabled", true);

        for (var i = 0; i < cnt; i++) {
            if (data[i] != null) {
                obj = { 
                    data : data[i],
                    optionCount: optionCount[i],
                    price: price[i]
                };
                arrayData.push(obj);
            }
        }

        var sJson = JSON.stringify(arrayData);

        jsonData = {
            sumPrice : sumPrice,
            product : sJson
        };

        $.ajax ({
            type: 'post',
            url: '/order',
            dataType: 'json',
            contentType: "application/x-www-form-urlencoded; charset=utf-8",
            data: jsonData
        })
        .success(function (data) { 
            // 주문 성공, 주문 완료 페이지로 이동
            if (data.result == 0) {
                location.href = '/order_done';
            } else if (data.reset == 1){
                // 주문하기전 로그인 여부 확인
                alert(data.msg);
            } else { 
                // 주문 실패 
                $("#btn_order").prop("disabled", false);
                alert(data.msg);
            }
        })
    }
});

// 총 가격 계산 함수 
function cal_sumPrice() { 
    var sum = 0;
    for (var i = 0; i < cnt; i++) {
        sum = sum + (price[i] * optionCount[i]);        
    }
    sumPrice = sum;
    $("#sum_price").text(sumPrice.toString() + "원");
};

// 옵션 리로드
function option_reload() {
    var addTag = "";
    // 선택한 옵션 화면에 보여주기
    $("#option").css("padding-top", "0px");
    $("#option").html(""); // 기존 태그 초기화
    for (var i = 0; i <= cnt; i++) {
        var boolValue = "";

        if (optionCount[i] == 1)
            boolValue = "disabled";

        if (data[i] != null) {
            addTag += "<div style='display:block;overflow:visible;min-height:105px;height:auto;background:#ffffff;margin-bottom:10px;border-radius:5px;border:2px solid #e8e8e8'>"
                + "<div style='display:block;position:relative'>"
                + "<div style='float:left'><input class='option_checkbox' type='checkbox' style='float:left;'/></div>"
                + "<div style='float:right;padding:5px'><input class='option_delete' type='button' value='X' style='float:right;border-radius:5px;background:#ffffff;color:#484848;'/></div>"
                + "</div>"
                + "<div style='display:block;border-radius:5px;margin:5px 5px 0 5px;position:relative;top:25px;left:0px;text-align:left;font-weight:bold;background:#f5f5f5;word-break:break-all'>" + data[i] + "</div>"
                + "<div style='position:relative;top:30px;left:0px;padding:0 5px 0 5px;'>"
                + "<div style='float:left;'>"
                + "<input class='option_minus' type='button' value='-'" + boolValue + " style='background:#90a2b0;color:#ffffff;border-radius:5px 0 0 5px;'/>"
                + "<input class='option_count' type='number' value='" + optionCount[i] + "' min='1' max='10' style='width:30px;text-align:center;'/>"
                + "<input class='option_plus' type='button' value='+' style='background:#90a2b0;color:#ffffff;border-radius:0 5px 5px 0;'/>"
                + "</div>"
                + "<div class='option_price' style='float:right;display:block;font-weight:bold'>" + price[i] * optionCount[i] +"원 </div>"
                + "</div>"
                + "</div>";
        }
    }
    $("#option").append(addTag); 
};


</script> 
</html>
