<!DOCTYPE HTML>
<html lang="ko">
<head>
    <%- include('head') %>
    <title>마이페이지</title>
    <link type = "text/css" rel="stylesheet" href="/public/css/mypage.css">
    <link type = "text/css" rel="stylesheet" href="/public/css/order_list.css">
    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
</head>

<body>
    <!-- header -->
    <%- include('header') %>
  
    <div class="mypage" style="display: inline;">

        <!-- 마이페이지 로고 -->
        <div class="logo"> 마이페이지 </div>
        
        <div class ="align">

        <!-- 왼쪽 메뉴 -->
        <div class="myPageLeftMenu fL">
            <div class="myPageSubMenu">
                <div class="order">
                    주문 내역
                </div>
                <div class="like">
                    찜한 상품
                </div>
                <div class="user">
                    개인 정보
                </div>
            </div>
        </div>
        <br>
        <div class="mobilemenu">
            <div class="order">
                주문내역
            </div>
            <div class="like">
                찜한 상품
            </div>
            <div class="user" >
                개인 정보
            </div>
        </div>
        <br>

        <!-- 오른 쪽 메뉴 -->
        <!-- 주문내역 -->
        <div id="order-list">
            <!-- 어느 페이지인지 설명 -->
            <div class="div-sub">
                <div style="float:left; font-weight: bold; font-size: 20px;">주문 내역</div>
                <div style="float:right; font-size: 10pt; margin: 0;"><img src="/public/images/home.png" style="width: 20px; height: 20px; padding-right: 10px;"> 메뉴 > 마이페이지 > 주문 내역</div>
                <div style="width:100%; height: 2px; background: #000000; display:inline-block; margin: 0;"> </div>
            </div>

            <!-- 주문 내역 테이블 -->

            <div style="padding-bottom: 50px; margin-top: 20px;">
                <%  for (var i = 0; i < order.length; i++) { 
                    var obj = JSON.parse(order[i].ord_content.product); %>
                <div style="margin-bottom:20px">
                <div>            
                    <div style="float: left;font-size: 12pt;font-weight: bold;"> <%= order[i].ord_date %> </div>     
                    <div style="float: right; font-size: 12pt; font-weight: bold;"> 총가격: <%= order[i].ord_content.sumPrice %> 원</div>     
                </div>            
                <div id="table">
                    <div class="col">상품</div>
                    <div class="col">수량</div>
                    <div class="col">가격</div>
                <% for (var j = 0; j < obj.length; j++ ) { %>
                    <div class="" style="grid-column: 1/2;"><%= obj[j].data %></div>
                    <div class="" style="grid-column: 2/3;"><%= obj[j].optionCount %></div>
                    <div class="" style="grid-column: 3/4;"><%= obj[j].price * obj[j].optionCount %>원</div>
                <% } %>
                </div>
                </div>
                <% } %>
            </div> 
            <!-- 주문 내역 -->
        </div>
    </div>
</body>

<script> 
// 왼쪽 메뉴에 따른 페이지 전환
$(".order").click(function(){
    location.href = '/order_list';
});
$(".like").click(function(){
    location.href = '/like_list';
});
$(".user").click(function(){
    location.href ='/user_update';
});


</script>
</html>
